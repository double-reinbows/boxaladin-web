{
  "name": "frontend-ba",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "axios": "^0.17.1",
    "base-64": "^0.1.0",
    "bootstrap": "^4.0.0-beta.3",
    "dotenv": "^4.0.0",
    "firebase": "^4.8.2",
    "jsonwebtoken": "^8.1.0",
    "md5": "^2.2.1",
    "moment": "^2.21.0",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-modal": "^3.1.10",
    "react-redux": "^5.0.6",
    "react-redux-loading-bar": "^3.1.2",
    "react-router": "^4.2.0",
    "react-router-dom": "^4.2.2",
    "react-scripts": "1.0.17",
    "reactstrap": "^5.0.0-alpha.4",
    "redux": "^3.7.2",
    "redux-thunk": "^2.2.0",
    "xendit-js-node": "^0.1.0"
  },
  "devDependencies": {
    "autoprefixer": "^7.1.4",
    "babel-jest": "^22.4.1",
    "babel-plugin-transform-export-extensions": "^6.22.0",
    "chokidar-cli": "^1.2.0",
    "concat": "^1.0.3",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "enzyme-redux": "^0.1.8",
    "jest": "^22.4.2",
    "jest-cli": "^22.4.2",
    "jest-enzyme": "^4.2.0",
    "node-sass": "^4.5.3",
    "node-sass-chokidar": "^1.1.0",
    "npm-run-all": "^4.1.1",
    "postcss-cli": "^4.1.1",
    "react-test-renderer": "^16.2.0",
    "redux-mock-store": "^1.5.1",
    "redux-test-utils": "^0.2.2"
  },
  "scripts": {
    "start": "npm-run-all --parallel watch:sass reactstart",
    "reactstart": "react-scripts start",
    "reactstart:build": "react-scripts build",
    "build": "npm-run-all -s build:css reactstart:build",
    "test": "jest",
    "eject": "react-scripts eject",
    "sass": "npm-run-all -s sass:compile prefix:css sass:apply-prefix",
    "sass:compile": "node-sass-chokidar public/sass/main.scss > public/css/style.css",
    "sass:apply-prefix": "node-sass-chokidar public/css/style.prefix.css > public/css/style.css",
    "watch:sass-prefix": "npm run sass && chokidar public/sass/*.scss public/sass/**/*.scss -c 'npm run sass'",
    "watch:sass": "npm run sass:compile && node-sass public/sass/main.scss public/css/style.css -w",
    "devserver": "live-server",
    "prefix:css": "postcss --use autoprefixer -b 'last 10 versions' public/css/style.css -o public/css/style.prefix.css",
    "compress:css": "node-sass-chokidar public/css/style.prefix.css > public/css/style.css --output-style compressed",
    "build:css": "npm-run-all -s sass:compile prefix:css compress:css"
  },
  "jest": {
    "setupTestFrameworkScriptFile": "<rootDir>src/setupTests.js",
    "unmockedModulePathPatterns": [
      "react",
      "enzyme",
      "jest-enzyme"
    ]
  }
}
